# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Timezone
TIME_ZONE=UTC

# Database (SQLite is default, configure PostgreSQL if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/attendance_bridge

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ZKTeco Device Configuration
ZKTECO_DEFAULT_PORT=4370
ZKTECO_TIMEOUT=10

# Polling Configuration
# How often to poll devices (in minutes)
POLLING_INTERVAL_MINUTES=15

# Work Hours Configuration
# Used to detect outliers (format: HH:MM)
WORK_START_TIME=08:00
WORK_END_TIME=18:00

# CRM Configuration
# Remote CRM API endpoint for syncing attendance
CRM_API_URL=https://your-crm-domain.com/api/attendance/
CRM_API_TOKEN=your-crm-api-token-here

# CRM Sync Configuration
CRM_SYNC_BATCH_SIZE=100
CRM_REQUEST_TIMEOUT=30
CRM_MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
