# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Timezone
TIME_ZONE=UTC

# Database (SQLite is default, configure PostgreSQL if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/attendance_bridge

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ZKTeco Device Configuration
ZKTECO_DEFAULT_PORT=4370
ZKTECO_TIMEOUT=10

# Polling Configuration
# How often to poll devices (in minutes)
POLLING_INTERVAL_MINUTES=15

# Work Hours Configuration
# Used to detect outliers (format: HH:MM)
WORK_START_TIME=08:00
WORK_END_TIME=18:00

# CRM Configuration
# Remote CRM API endpoint for syncing attendance
CRM_API_URL=https://your-crm-domain.com/api/attendance/
CRM_API_TOKEN=your-crm-api-token-here

# CRM Sync Configuration
CRM_SYNC_BATCH_SIZE=100
CRM_REQUEST_TIMEOUT=30
CRM_MAX_RETRIES=3

# Email Notifications for Outliers
# Set to 'true' to enable email alerts when new outlier punches are detected
OUTLIER_EMAIL_NOTIFICATIONS=false
# Comma-separated list of email addresses to receive outlier notifications
OUTLIER_EMAIL_RECIPIENTS=manager@company.com,hr@company.com

# Email Server Configuration (required if OUTLIER_EMAIL_NOTIFICATIONS=true)
# For development, use console backend (prints emails to terminal)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP backend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=true
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=attendance@company.com

# Logging
LOG_LEVEL=INFO
